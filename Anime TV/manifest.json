{
  "name": "Anime TV",
  "manifest_version": 2,
  "version": "0.9.5",
  "update_url": "https://github.com/ozcanzaferayan/anime-tv/master/chrome/updates.xml",
  "description": "Anime'lerinizi takip etmenin en kolay yolu.",
  "browser_action": {
      "default_title": "Anime TV",
      "default_icon": "img/icon.png",
      "default_popup": "popup.html"
  },
  "icons":{
    "128":"img/icon.png"
  },
  "options_page": "options.html",
  "background": { 
    "scripts": 
    [
      "js/jquery-2.1.0.min.js",
      "js/main.js",
      "js/background.js"
    ] },
  "permissions": [
    "https://www.kimonolabs.com/*",
    "notifications" 
  ],
  "content_security_policy": "script-src 'self' https://www.kimonolabs.com; object-src 'self'"
}
