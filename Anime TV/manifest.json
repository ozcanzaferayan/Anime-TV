{
  "name": "Anime TV",
  "manifest_version": 2,
  "version": "0.8.1",
  "description": "Artık en son çıkan animeleri kolayca takip edebilir, yeni bölüm geldiğinde ilk haberdar olan siz olabilirsiniz.",
  "browser_action": {
      "default_title": "Anime TV",
      "default_icon": "img/icon.png",
      "default_popup": "popup.html"
  },
  "icons":{
    "128":"img/icon.png"
  },
  "options_page": "options.html",
  "background": { 
    "scripts": 
    [
      "js/jquery-2.1.0.min.js",
      "js/background.js"
    ] },
  "permissions": [
    "https://www.kimonolabs.com/*",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://www.kimonolabs.com; object-src 'self'"
}
